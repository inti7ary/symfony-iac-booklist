{% extends 'layout.html.twig' %}

{% block title %}Регистрация{% endblock %}

{% block right_header_pane %} <a href="{{path("app_login")}}" class="navl-link" id="login-button">Вход</a> {% endblock %}

{% block body %}
  <div class="wrapper">


        <h2>Регистрация</h2>
<p>Заполните поля, чтобы зарегистрироваться</p>


    {{ form_start(registrationForm) }}
        <div class="form-group ">

<label>Введите логин</label>
    {{ form_widget(registrationForm.username, { 'attr': {'class': 'form-control', 'placeholder': 'Логин', 'required': false} }) }}
   <span class="invalid-feedback d-block">{{form_errors(registrationForm.username)}}</span>
        </div>

    
    <div class="form-group ">
    
        {{ form_label(registrationForm.plainPassword.first ) }}
        {{ form_widget(registrationForm.plainPassword.first, { 'attr': {'class': 'form-control', 'placeholder':'Пароль'} }) }}
        <span class="invalid-feedback d-block">{{form_errors(registrationForm.plainPassword.first)}}</span>
        
    </div>

    <div class="form-group ">
    
        {{ form_label(registrationForm.plainPassword.second, null ) }}
        {{ form_widget(registrationForm.plainPassword.second, { 'attr': {'class': 'form-control', 'placeholder':'Подтверждение пароля'} }) }}
        <span class="invalid-feedback d-block">{{form_errors(registrationForm.plainPassword.second)}}</span>
    </div>




        <input type="submit" class="btn btn-primary" value="Отправить">



    {{ form_end(registrationForm) }}



    </div>   
{% endblock %}
